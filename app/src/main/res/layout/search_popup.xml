<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_245sdp"
    android:layout_height="@dimen/_280sdp"
    android:layout_gravity="center"
    android:background="@drawable/popup"
    android:padding="@dimen/_7sdp"
    >


    <!--<ImageView
        android:id="@+id/alert"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_50sdp"
        app:layout_constraintBottom_toTopOf="@+id/msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941"
        app:srcCompat="@drawable/ic_alert" />-->

    <TextView
        android:id="@+id/msg"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="163dp"
        android:layout_marginTop="120dp"
        android:background="#fff"
        android:fontFamily="@font/fjalla_one"
        android:gravity="center_horizontal"
        android:padding="@dimen/_8sdp"
        android:text="Dear visitor,you can search by writing the medicine name or using its picture.Also you can use place filter to make your search process easier."
        android:textColor="#023561"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gotit"
        android:layout_width="@dimen/_115sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gradiant"
        android:fontFamily="@font/fjalla_one"
        android:gravity="center_horizontal"
        android:padding="@dimen/_10sdp"
        android:text="Got it"
        android:textColor="#fff"
        android:textSize="@dimen/_18sdp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/alertanim"
        android:layout_width="221dp"
        android:layout_height="156dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/msg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/alertsearch" />

    <ImageView
        android:id="@+id/close"
        android:layout_width="40dp"
        android:layout_height="41dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.003"
        app:srcCompat="@drawable/ic_close" />

</androidx.constraintlayout.widget.ConstraintLayout>